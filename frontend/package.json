{
    "name": "dragndrop-frontend",
    "version": "1.0.0",
    "description": "Frontend TypeScript para el editor HTML visual",
    "type": "module",
    "scripts": {
        "dev": "vite",
        "build": "tsc && vite build",
        "preview": "vite preview",
        "type-check": "tsc --noEmit",
        "lint": "eslint src --ext ts,tsx --report-unused-disable-directives --max-warnings 0",
        "test": "vitest",
        "test:ui": "vitest --ui",
        "test:coverage": "vitest --coverage"
    },
    "dependencies": {
        "axios": "^1.6.0",
        "uuid": "^9.0.1"
    },
    "devDependencies": {
        "@types/node": "^20.8.0",
        "@types/uuid": "^9.0.6",
        "@typescript-eslint/eslint-plugin": "^6.0.0",
        "@typescript-eslint/parser": "^6.0.0",
        "@vitejs/plugin-legacy": "^4.1.1",
        "eslint": "^8.45.0",
        "typescript": "^5.0.2",
        "vite": "^5.0.0",
        "vitest": "^0.34.0",
        "@vitest/coverage-v8": "^0.34.0",
        "@vitest/ui": "^0.34.0"
    },
    "engines": {
        "node": ">=16.0.0"
    }
}
