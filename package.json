{
  "name": "dragndrop-html-editor",
  "version": "2.0.0",
  "description": "Editor visual de HTML con funcionalidad de arrastrar y soltar (drag & drop) para crear pÃ¡ginas web de forma intuitiva. Ahora con sistema Undo/Redo, atajos de teclado, responsive tester y live preview.",
  "main": "index.html",
  "type": "module",
  "scripts": {
    "dev": "http-server -p 8080 -c-1 --cors",
    "dev:debug": "http-server -p 8080 -c-1 --cors -o",
    "build": "vite build",
    "build:dev": "vite build --mode development",
    "preview": "vite preview",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "test:e2e": "playwright test",
    "test:e2e:ui": "playwright test --ui",
    "test:e2e:debug": "playwright test --debug",
    "test:all": "npm run test:coverage && npm run test:e2e",
    "clean": "rm -rf dist coverage .nyc_output",
    "serve": "http-server dist -p 8080",
    "start": "npm run dev"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/SebastianVernis/DragNDrop.git"
  },
  "keywords": [
    "html-editor",
    "visual-editor",
    "drag-and-drop",
    "web-development",
    "wysiwyg",
    "website-builder",
    "javascript",
    "html5",
    "css3"
  ],
  "author": "Sebastian Vernis",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/SebastianVernis/DragNDrop/issues"
  },
  "homepage": "https://github.com/SebastianVernis/DragNDrop#readme",
  "dependencies": {
    "@playwright/test": "^1.56.1"
  },
  "devDependencies": {
    "@testing-library/dom": "^9.3.0",
    "@testing-library/jest-dom": "^6.0.0",
    "http-server": "^14.1.1",
    "jest": "^30.2.0",
    "jest-environment-jsdom": "^30.2.0",
    "terser": "^5.44.1",
    "vite": "^5.0.0"
  },
  "engines": {
    "node": ">=16.0.0",
    "npm": ">=8.0.0"
  },
  "browserslist": [
    "> 1%",
    "last 2 versions",
    "not dead"
  ]
}
