{
  "name": "dragndrop-html-editor",
  "version": "1.0.0",
  "description": "Editor visual de HTML con funcionalidad de arrastrar y soltar (drag & drop) para crear pÃ¡ginas web de forma intuitiva.",
  "main": "index.html",
  "type": "module",
  "scripts": {
    "dev": "http-server -p 8080 -c-1 --cors",
    "dev:debug": "http-server -p 8080 -c-1 --cors -o",
    "build": "vite build",
    "build:dev": "vite build --mode development",
    "preview": "vite preview",
    "test": "jest --config tests/jest.config.js",
    "test:watch": "jest --config tests/jest.config.js --watch",
    "test:coverage": "jest --config tests/jest.config.js --coverage",
    "test:unit": "jest --config tests/jest.config.js tests/unit",
    "test:integration": "jest --config tests/jest.config.js tests/integration",
    "test:e2e": "playwright test --config tests/playwright.config.js",
    "test:e2e:ui": "playwright test --config tests/playwright.config.js --ui",
    "test:e2e:debug": "playwright test --config tests/playwright.config.js --debug",
    "test:visual": "playwright test --config tests/playwright.config.js tests/e2e/visual.spec.js",
    "test:all": "npm run test:coverage && npm run test:e2e",
    "lint": "eslint src/ --ext .js",
    "lint:fix": "eslint src/ --ext .js --fix",
    "format": "prettier --write \"src/**/*.{js,css,html}\"",
    "format:check": "prettier --check \"src/**/*.{js,css,html}\"",
    "deploy": "npm run build && npm run deploy:vercel",
    "deploy:preview": "vercel",
    "deploy:prod": "vercel --prod",
    "deploy:netlify": "netlify deploy --prod --dir=dist",
    "deploy:github": "npm run build && gh-pages -d dist",
    "clean": "rm -rf dist coverage .nyc_output",
    "serve": "http-server dist -p 8080",
    "start": "npm run dev"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/SebastianVernis/DragNDrop.git"
  },
  "keywords": [
    "html-editor",
    "visual-editor",
    "drag-and-drop",
    "web-development",
    "wysiwyg",
    "website-builder",
    "javascript",
    "html5",
    "css3"
  ],
  "author": "Sebastian Vernis",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/SebastianVernis/DragNDrop/issues"
  },
  "homepage": "https://github.com/SebastianVernis/DragNDrop#readme",
  "dependencies": {
    "@playwright/test": "^1.56.1"
  },
  "devDependencies": {
    "http-server": "^14.1.1",
    "jest": "^30.2.0",
    "jest-environment-jsdom": "^30.2.0",
    "vite": "^5.0.0",
    "eslint": "^8.45.0",
    "@testing-library/jest-dom": "^6.0.0",
    "@testing-library/dom": "^9.3.0",
    "prettier": "^3.0.0",
    "vercel": "^32.0.0",
    "netlify-cli": "^17.0.0",
    "gh-pages": "^6.0.0"
  },
  "engines": {
    "node": ">=16.0.0",
    "npm": ">=8.0.0"
  },
  "browserslist": [
    "> 1%",
    "last 2 versions",
    "not dead"
  ]
}
